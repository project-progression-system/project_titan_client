<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="edu.cnm.deepdive.project_titan.controller.CompletedAssignmentsFragment">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/ninja_drop_av_name"
    android:textColor="#0c4b8b"
    android:textSize="54sp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"/>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ninja_background"/>


  <ImageView
    android:id="@+id/image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:src="@drawable/ninja_drop"/>

  <ProgressBar
    android:id="@+id/determinateBar"
    android:layout_width="200dp"
    android:layout_height="200dp"
    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
    android:indeterminate="false"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="60dp"
    android:maxHeight="200dp"
    android:minHeight="200dp"
    android:maxWidth="200dp"
    android:minWidth="100dp"
    android:max="200"
    android:progress="75"
    android:layout_alignBottom="@+id/image"
    android:padding="5dp"
    android:progressTint="#00fd04"/>

</FrameLayout>